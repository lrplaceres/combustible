{% extends 'backend.html.twig' %}

{% block title %}Combustibles
{% endblock %}

{% block article %}

	<div class="row">

		<div class="col-10">
			<h1 class="text-center back-white">Tipos de Combustibles</h1>
		</div>
		<div class="col-2">
			<div class="d-grid gap-2 mx-auto">
				<a href="{{ path('app_tipo_new') }}" class="btn btn-primary text-right btn-lg" data-bs-toggle="tooltip" data-bs-title="Insertar elemento">Insertar</a>
			</div>
		</div>
	</div>

	{% for flash_message in app.session.flashbag.get('notice') %}
		<div class="alert alert-warning" role="alert">
			{{ flash_message }}
		</div>
	{% endfor %}


	<table class="table table-striped table-hover back-white">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% for tipo in tipos %}
				<tr>
					<td>
						<a href="{{ path('app_tipo_show', {'id': tipo.id}) }}" data-bs-toggle="tooltip" data-bs-title="Mostrar detalles">{{ tipo.id }}</a>
					</td>
					<td>{{ tipo.nombre }}</td>
					<td>
						<a href="{{ path('app_tipo_show', {'id': tipo.id}) }}" data-bs-toggle="tooltip" data-bs-title="Mostrar detalles">Detalles</a>
						<a href="{{ path('app_tipo_edit', {'id': tipo.id}) }}" data-bs-toggle="tooltip" data-bs-title="Editar elemento">Editar</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">No hay registros</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
