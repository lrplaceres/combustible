{% extends 'backend.html.twig' %}

{% block title %}Lugar
{% endblock %}

{% block article %}
	<h1 class="text-center back-white">Lugar</h1>

	<table class="table table-striped table-hover back-white">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ lugar.id }}</td>
			</tr>
			<tr>
				<th>Nombre</th>
				<td>{{ lugar.nombre }}</td>
			</tr>
		</tbody>
	</table>

	<div class="btn-group">
		<a href="{{ path('app_lugar_index') }}" class="btn btn-secondary"><i class="ti ti-square-arrow-left"></i> Lugares</a>

		<a href="{{ path('app_lugar_edit', {'id': lugar.id}) }}" class="btn btn-primary"><i class="ti ti-edit"></i> Editar</a>

		{{ include('lugar/_delete_form.html.twig') }}

	</div>
