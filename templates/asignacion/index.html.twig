{% extends 'backend.html.twig' %}

{% block title %}Asignaciones
{% endblock %}

{% block article %}
	<div class="row">

		<div class="col-10">
			<h1 class="text-center back-white">Asignaciones</h1>
		</div>
		<div class="col-2">
			<div class="d-grid gap-2 mx-auto">
				<a href="{{ path('app_asignacion_new') }}" class="btn btn-primary text-right btn-lg" data-bs-toggle="tooltip" data-bs-title="Insertar elemento">Insertar</a>

			</div>
		</div>
	</div>

	{% for flash_message in app.session.flashbag.get('notice') %}
		<div class="alert alert-warning" role="alert">
			{{ flash_message }}
		</div>
	{% endfor %}

	<table class="table table-striped table-hover back-white">
		<thead>
			<tr>
				<th>Id</th>
				<th>Cantidad</th>
				<th>Fecha</th>
				<th>Entidad</th>
				<th>Chapa</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% for asignacion in asignacions %}
				<tr>
					<td>
						<a href="{{ path('app_asignacion_show', {'id': asignacion.id}) }}" data-bs-toggle="tooltip" data-bs-title="Mostrar detalles">{{ asignacion.id }}</a>
					</td>
					<td>{{ asignacion.cantidad }}</td>
					<td>{{ asignacion.fecha ? asignacion.fecha|date('Y-m-d') : '' }}</td>
					<td>{{  asignacion.empresa.alias }}</td>
					<td>{{ asignacion.chapa }}</td>
					<td>
						<a href="{{ path('app_asignacion_show', {'id': asignacion.id}) }}" data-bs-toggle="tooltip" data-bs-title="Mostrar detalles">Detalles</a>
						<a href="{{ path('app_asignacion_edit', {'id': asignacion.id}) }}" data-bs-toggle="tooltip" data-bs-title="Editar elemento">Editar</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">No hay registros</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
