{% extends 'backend.html.twig' %}

{% block title %}Asignación
{% endblock %}

{% block article %}
	<h1 class="text-center back-white">Asignación</h1>

	<table class="table table-striped table-hover back-white">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ asignacion.id }}</td>
			</tr>
			<tr>
				<th>Cantidad</th>
				<td>{{ asignacion.cantidad }}</td>
			</tr>
			<tr>
				<th>Fecha</th>
				<td>{{ asignacion.fecha ? asignacion.fecha|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Chapa</th>
				<td>{{ asignacion.chapa }}</td>
			</tr>
		</tbody>
	</table>

	<div class="btn-group">
		<a href="{{ path('app_asignacion_index') }}" class="btn btn-secondary">Asignaciones</a>

		<a href="{{ path('app_asignacion_edit', {'id': asignacion.id}) }}" class="btn btn-primary">Editar</a>

		{{ include('asignacion/_delete_form.html.twig') }}

	</div>
{% endblock %}
