{% extends 'backend.html.twig' %}

{% block title %}Empresa
{% endblock %}

{% block article %}
	<h1 class="text-center back-white">Entidad</h1>

	<table class="table table-striped table-hover back-white">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ empresa.id }}</td>
			</tr>
			<tr>
				<th>Nombre</th>
				<td>{{ empresa.nombre }}</td>
			</tr>
			<tr>
				<th>Alias</th>
				<td>{{ empresa.alias }}</td>
			</tr>
		</tbody>
	</table>

	<div class="btn-group">

		<a href="{{ path('app_empresa_index') }}" class="btn btn-secondary"><i class="ti ti-square-arrow-left"></i> Entidades</a>

		<a href="{{ path('app_empresa_edit', {'id': empresa.id}) }}" class="btn btn-primary"><i class="ti ti-edit"></i> Editar</a>

		{{ include('empresa/_delete_form.html.twig') }}

	</div>
{% endblock %}
